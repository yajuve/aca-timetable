<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="aca_timetable.list_hour">
      <field name="name">aca_timetable list</field>
      <field name="model">aca_timetable.hour</field>
      <field name="arch" type="xml">
        <list>
          <field name="name" />
          <field name="desc" string="Description" />
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="aca_timetable.list_timetableline">
      <field name="name">aca_timetable list</field>
      <field name="model">aca_timetable.timetableline</field>
      <field name="arch" type="xml">
        <list>
          <field name="timetable_id" />
          <field name="room_id" />
          <field name="day_id" />
          <field name="hour_id" />
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="aca_timetable.list_timetable">
      <field name="name">aca_timetable list</field>
      <field name="model">aca_timetable.timetable</field>
      <field name="arch" type="xml">
        <list>
          <field name="year_id" />
        </list>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="aca_timetable.action_window_room">
      <field name="name">Rooms window</field>
      <field name="res_model">aca_timetable.room</field>
      <field name="view_mode">list,form</field>
      <field name="path">rooms</field>
    </record>

    <record model="ir.actions.act_window" id="aca_timetable.action_window_day">
      <field name="name">Days window</field>
      <field name="res_model">aca_timetable.day</field>
      <field name="view_mode">list,form</field>
      <field name="path">days</field>
    </record>

    <record model="ir.actions.act_window" id="aca_timetable.action_window_hour">
      <field name="name">Hours window</field>
      <field name="res_model">aca_timetable.hour</field>
      <field name="view_mode">list,form</field>
      <field name="path">hours</field>
    </record>

    <record model="ir.actions.act_window" id="aca_timetable.action_window_timetableline">
      <field name="name">Timetable Lines window</field>
      <field name="res_model">aca_timetable.timetableline</field>
      <field name="view_mode">list,form</field>
      <field name="path">timetablelines</field>
    </record>

    <record model="ir.actions.act_window" id="aca_timetable.action_window_year">
      <field name="name">Years window</field>
      <field name="res_model">aca_timetable.year</field>
      <field name="view_mode">list,form</field>
      <field name="path">years</field>
    </record>

    <record model="ir.actions.act_window" id="aca_timetable.action_window_program">
      <field name="name">Programs window</field>
      <field name="res_model">aca_timetable.program</field>
      <field name="view_mode">list,form</field>
      <field name="path">programs</field>
    </record>

    <record model="ir.actions.act_window" id="aca_timetable.action_window_timetable">
      <field name="name">Timetable window</field>
      <field name="res_model">aca_timetable.timetable</field>
      <field name="view_mode">list,form</field>
      <field name="path">timetables</field>
    </record>


    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="aca_timetable.action_server">
      <field name="name">aca_timetable server</field>
      <field name="model_id" ref="model_aca_timetable_aca_timetable"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>
-->

    <!-- Top menu item -->

    <menuitem name="Aca Timetable" id="aca_timetable.menu_root" />

    <!-- menu categories -->


    <menuitem name="TimetableLine" id="aca_timetable.menu_timetableline"
      parent="aca_timetable.menu_root"
      action="aca_timetable.action_window_timetableline" />
    <menuitem name="Timetable" id="aca_timetable.menu_timetable"
      parent="aca_timetable.menu_root"
      action="aca_timetable.action_window_timetable" />
    <!-- Config Menu -->
    <menuitem name="Configure" id="aca_timetable.menu_config" parent="aca_timetable.menu_root" />


    <!-- actions -->

    <menuitem name="Room" id="aca_timetable.menu_room_list" parent="aca_timetable.menu_config"
      action="aca_timetable.action_window_room" />
    <menuitem name="Day" id="aca_timetable.menu_day" parent="aca_timetable.menu_config"
      action="aca_timetable.action_window_day" />
    <menuitem name="Hour" id="aca_timetable.menu_hour" parent="aca_timetable.menu_config"
      action="aca_timetable.action_window_hour" />
    <menuitem name="Year" id="aca_timetable.menu_year" parent="aca_timetable.menu_config"
      action="aca_timetable.action_window_year" />
    <menuitem name="Program" id="aca_timetable.menu_program" parent="aca_timetable.menu_config"
      action="aca_timetable.action_window_program" />
    <!-- <menuitem name="Server to list" id="aca_timetable" parent="aca_timetable.menu_2"
              action="aca_timetable.action_server"/> -->

  </data>
</odoo>